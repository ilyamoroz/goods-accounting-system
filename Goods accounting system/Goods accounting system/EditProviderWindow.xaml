<Window x:Class="Goods_accounting_system.EditProviderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Goods_accounting_system"
        mc:Ignorable="d"
        Title="EditProviderWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="ProviderNameField" HorizontalAlignment="Left" Margin="383,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ProviderAddressField" HorizontalAlignment="Left" Margin="383,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="ProviderPhoneNumberField" HorizontalAlignment="Left" Margin="383,233,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="EditProviderButton" Content="Save" HorizontalAlignment="Left" Margin="349,329,0,0" VerticalAlignment="Top" Height="30" Width="94" Click="EditProviderButton_Click"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="249,157,0,0" VerticalAlignment="Top"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="249,191,0,0" VerticalAlignment="Top"/>
        <Label Content="Phone number" HorizontalAlignment="Left" Margin="249,225,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
